<%- include('../partials/header.ejs') %>

    <div class="container text-center">
        <h1 class="display-2 my-5">Edit member details:</h1>
        <form class="text-center" action="/members/<%= data[0].mid %>?_method=PUT" method="POST">
            <div class="form-group">
            <label for="fName">First Name: </label>
            <input type="text" class="form-control" id="fName" name="fName" value="<%= data[0].fName %>">
            </div>
            <div class="form-group">
            <label for="lName">Last Name: </label>
            <input type="text" class="form-control" id="lName" name="lName" value="<%= data[0].lName %>">
            </div>
            <div class="form-group">
                <label for="mobile">Mobile: </label>
                <input type="text" class="form-control" id="mobile" name="mobile" value="<%= data[0].mobile %>">
            </div>
            <div class="form-group">
                <label for="address">Address: </label>
                <input type="text" class="form-control" id="address" name="address" value="<%= data[0].address %>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>


<%- include('../partials/footer.ejs') %>
