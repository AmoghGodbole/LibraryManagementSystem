<%- include('../partials/header.ejs') %>

<style>
    h2{
        margin-top: 2%;
    }
    label{
        margin-top: 2%;
    }
</style>

<div class="container text-center">    
    <div class="jumbotron" style="background: transparent;">
        <h1 class="display-3">Library Management System!</h1>
        <p class="lead">This is a simple software which is can be integrated in any library</p>
        <hr class="my-4">
        <p>Admins(Librarians) can register and handle the library books accordingly!</p>
    </div>
    <h2>Register</h2>
    <% if(message.length > 0) { %>
        <div class="alert alert-danger my-5" role="alert"><%= message %></div> 
    <% } %>
    <form action="/signup" method="post">
        <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-succcess btn-lg">Register</button>
    </form>
    <hr>
    <p>Need an account <a href="/signup">Register</a></p>
    <p>Go Back <a href="/">Home</a>.</p>
</div>

<%- include('../partials/footer.ejs') %>
