<%- include('../partials/header.ejs') %>

    <div class="container text-center">
        <h1 class="display-2 my-5">Edit details of the supplier:</h1>
        <form class="text-center" action="/suppliers/<%= data[0].sid %>?_method=PUT" method="POST">
            <div class="form-group">
            <label for="name">Name: </label>
            <input type="text" class="form-control" id="name" name="name" value="<%= data[0].name %>">
            </div>
            <div class="form-group">
            <label for="mobile">Mobile: </label>
            <input type="text" class="form-control" id="mobile" name="mobile" value="<%= data[0].mobile %>">
            </div>
            <div class="form-group">
                <label for="address">Address: </label>
                <input type="text" class="form-control" id="address" name="address" value="<%= data[0].address %>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>


<%- include('../partials/footer.ejs') %>
